<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>
            <div style="margin: 2% auto; width:30%;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text" />
                    </div>
                    <div class="form-group">
                        <input class="btn bt-lg btn-primary btn-block" type="submit" value="Submit" />
                    </div>
                </form>
                
                <a href="/campgrounds">Go Back!!</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>