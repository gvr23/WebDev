<% include partials/header %>

<h1>Index Page!!!</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>"/>
        <p><%= blog.body.substring(0, 100) %>...</p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
        <div><span><%= blog.created %></span></div>
    </div>
<% }); %>

<% include partials/footer %>